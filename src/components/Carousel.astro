---

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<script type="module">
    import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.mjs'
  
    const swiper = new Swiper(".mySwiper", {
        loop: true,
        pagination: {
        el: ".swiper-pagination",
        },
        autoplay: {
            delay: 6000,
            disableOnInteraction: false,
        },
        speed: 1000,
        keyboard: true
    });

    document.addEventListener('DOMContentLoaded', function () {
    const light = document.querySelector('.light');
    const colors = [
        '#4B3A84',
        '#965CF3',
        '#030303',
        '#FF4826'
    ];

    swiper.on('slideChange', function () {
        const activeIndex = swiper.realIndex;

        // Start the fade-out effect
        light.classList.add('off');

        // After a short delay, change the color and start the fade-in effect
        setTimeout(() => {
            light.style.backgroundColor = colors[activeIndex];
            light.style.background = colors[activeIndex];

            // Remove the off class and add the on class to start the fade-in
            light.classList.remove('off');
            light.classList.add('on');
        }, 250);
    });
});
</script>

<div class="swiper mySwiper">
    <div class="light">
    </div>
    <div class="swiper-wrapper">
        <div class="swiper-slide">
            <span class="title-slide">Veigar <span class="violet">v2</span></span>
